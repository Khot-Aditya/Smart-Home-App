<resources>
    <!-- Base application theme. -->
    <style name="Theme.Home" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#F3E7FD</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Outlined">
        <!--        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>-->
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="android:outlineProvider">none</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorSecondary">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
    </style>
</resources>